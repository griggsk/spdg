<%- model_class = Initiative -%>
<div class="page-header">
  <h1>Search Initiatives</h1>
</div>
<table class="table table-striped table-bordered" id="data">
  <thead>
    <tr>
      <th class="small-select">Start<br> Year</th>
      <th class="small-select">End<br> Year</th>
      <th><%= model_class.human_attribute_name(:state_id) %><br>
      	<%= select_tag('search_state', options_from_collection_for_select(@states, "abbrev", "abbrev"), :prompt => "All States ", :class => 'med-select' )%>
      </th>
      <th>Topic<br>
       	<%= select_tag('search_topic', options_from_collection_for_select(@topics, "name", "name"), :prompt => "All Topics ", :class => 'xlarge-select' )%>
      </th>
      <th>Population<br>
      	<%= select_tag('search_population', options_from_collection_for_select(@populations, "target", "target"), :prompt => "All Populations",:class => 'large-select' )%>
      </th>
      <th>Professional Development<br>
      	<%= select_tag('search_pd', options_from_collection_for_select(@pds, "name", "name"), :prompt => "All PDs",:class => 'large-select' )%>
      </th>
      <th>Implementation<br>
      	<%= select_tag('search_implementation', options_from_collection_for_select(@stages, "name", "name"), :prompt => "All Implementations",:class => 'large-select' )%>
      </th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:resources) %></th>
    </tr>
  </thead>
  <tbody>
    <% @initiatives.each do |initiative| %>
      <tr>
      	 <td><%= initiative.start_year %></td>
        <td><%= initiative.end_year %></td>
        <td><abbr title="<%= initiative.state.name %>"><%= initiative.state.abbrev %></abbr></td>
        <td><%= initiative.topics.collect(&:name).join(", ") %></td>
        <td><%= initiative.populations.collect(&:target).join(", ") %></td>
        <td><%= initiative.professionaldevelopments.collect(&:name).join(", ") %></td>
        <td><% initiative.implementations.each do |implementation| %>
  				<%= implementation.stages.collect(&:name).join(", ") %>
  			<%end%>
  		</td>
  		<td>
  			<%= initiative.description %>
  		</td>
  		<td>
  			<%= initiative.resources %>
  		</td>
      </tr>
    <% end %>
  </tbody>
</table>