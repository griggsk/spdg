<%- model_class = Initiative -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:state_id) %>:</strong></dt>
  <dd><%= @initiative.state.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_year) %>:</strong></dt>
  <dd><%= @initiative.start_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_year) %>:</strong></dt>
  <dd><%= @initiative.end_year %></dd>
  <dt><strong>Topics:</strong></dt>
  <dd><%= @initiative.topics.collect(&:name).join(",") %></dd>
  <dt><strong>Populations:</strong></dt>
  <dd><%= @initiative.populations.collect(&:target).join(",") %></dd>
  <dt><strong>Professional Developments:</strong></dt>
  <dd><%= @initiative.professionaldevelopments.collect(&:name).join(",") %></dd>
   <dt><strong>Contact:</strong></dt>
  <dd><%= display_contact(@initiative.contact)  %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @initiative.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resources) %>:</strong></dt>
  <dd><%= @initiative.resources %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              initiatives_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_initiative_path(@initiative), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              initiative_path(@initiative),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
