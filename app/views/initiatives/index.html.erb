<%- model_class = Initiative -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_initiative_path,
            :class => 'btn btn-primary' %>
            
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:state_id) %></th>
      <th>Years</th>
      <th>Name</th>
      <th>Contact</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @initiatives.each do |initiative| %>
      <tr>
        <td><%= initiative.state.abbrev %></td>
        <td><%= initiative.start_year %>
        - <%= initiative.end_year %></td>
        <td><%= initiative.name %></td>
        <td><%= display_contact(initiative.contact)  %></td>
        <td>
          <%= link_to 'view', home_path(initiative), :class => 'btn btn-mini btn-info' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_initiative_path(initiative), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      initiative_path(initiative),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_initiative_path,
            :class => 'btn btn-primary' %>
